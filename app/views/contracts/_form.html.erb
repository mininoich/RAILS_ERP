<%= form_for @contract do |form| %>
	<p>
		<%= form.label :students %>
		<%= form.collection_select :student_id, @students, :id, :nameStudent %>  		
	</p>
	<p>	
	<p>
		<%= form.label :companies %>
		<%= form.collection_select :company_id, @companies, :id, :name %>
	<p>
	<p>
		<%= form.label :contract_types %>
		<%= form.collection_select :contract_type_id, @contract_types, :id, :name %>
	<p>		
	<p>
		<%= form.label :date_start %>
		<%= form.date_select :date_start, :order => [:day, :month, :year]%>
	</p>
	<p>
		<%= form.label :date_end %>
		<%= form.date_select :date_end, :order => [:day, :month, :year]%>
	</p>
	<%= form.submit %>
<% end %>
