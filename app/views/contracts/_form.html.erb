<%= form_for @contract do |form| %>
	<p>
		<%= form.label :student %>
		<%= form.collection_select :student, @students, :id, :name %>  
	</p>
	<p>	
	<p>
		<%= form.label :company %>
		<%= form.collection_select :company, @companies, :id, :name %>
	<p>
	<p>
		<%= form.label :contract_type %>
		<%= form.collection_select :contract_type, @contract_types, :id, :libelle %>
	<p>		
	<p>
		<%= form.label :date_debut %>
		<%= date_select :form, :date_debut %>
	</p>
	<p>
		<%= form.label :date_fin %>
		<%= date_select :form, :date_fin %>
	</p>
	<%= form.submit %>
<% end %>
