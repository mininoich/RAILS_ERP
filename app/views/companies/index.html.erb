<h1>Companies</h1>
<table class="table table-bordered table-condensed">
	<thead>
			<td>Name</td>
			<td>Street</td>
			<td>City</td>
			<td>Action</td>
	</thead>
<% @companies.each do |c| %>
	<tr>
		<td><%= c.name %></td>
		<td><%= c.ad_rue %></td>
		<td><%= c.ad_ville %></td>
		<td>
			<%= link_to "Show", c %>
			<% if admin_signed_in? %>
				<%= link_to "Edit", [:edit, c] %>
				<%= link_to 'Delete', c, :confirm => 'Are you sure ?', :method => :delete %>
			<% end %>
		</td>
	</tr>
<% end %>
</table>
<%= link_to "Add", :action => 'new' %>
